// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sighting {
  id Int @id @default (autoincrement())
  createdAt DateTime @default(now())
  latitude Float
  longitude Float
}

model User {
  id Int @id @default (autoincrement())
  createdAt DateTime @default(now())
  isNew Boolean @default(false)
  numCorrect Int @default(0)
  firstProbCorrect Boolean @default(false)
  secondProbCorrect Boolean @default(false)
  thirdProbCorrect Boolean @default(false)
  fourthProbCorrect Boolean @default(false)
  fifthProbCorrect Boolean @default(false)
  sixthProbCorrect Boolean @default(false)
  seventhProbCorrect Boolean @default(false)
}